{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -- bun --hot src/index.ts",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "bunx wrangler d1 migrations apply rikai_db --local",
    "db:studio": "dotenvx run -- drizzle-kit studio",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "dotenvx run -- bun dist/index.js",
    "lint": "oxlint -c ../.oxlintrc.json --import-plugin --node-plugin --promise-plugin --tsconfig ./tsconfig.json ./src",
    "lint:fix": "oxlint -c ../.oxlintrc.json --import-plugin --node-plugin --promise-plugin --tsconfig ./tsconfig.json --fix ./src",
    "format": "oxfmt -c ../.oxfmtrc.json --write ./src",
    "format:check": "oxfmt -c ../.oxfmtrc.json --check ./src"
  },
  "dependencies": {
    "better-auth": "^1.4.10",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.31.8"
  }
}

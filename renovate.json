{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":preserveSemverRanges"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 10am on monday"],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "dependencyDashboardTitle": "Renovate ダッシュボード",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on monday"]
  },
  "packageRules": [
    {
      "description": "脆弱性対応はスケジュール外で即時にPR作成し、優先度を上げる",
      "matchManagers": ["osv", "vulnerabilityAlerts"],
      "schedule": ["at any time"],
      "prPriority": 100,
      "addLabels": ["security"],
      "automerge": false
    },
    {
      "groupName": "tooling (typescript / oxlint / oxfmt / types)",
      "matchPackageNames": [
        "typescript",
        "@types/node",
        "@types/bun",
        "oxlint",
        "oxfmt",
        "@typescript/native-preview"
      ]
    },
    {
      "groupName": "react (runtime + types)",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "description": "開発用依存は patch/minor を自動マージ",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "GitHub Actions は digest/patch/minor を自動マージ",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["digest", "patch", "minor"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}

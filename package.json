{
  "name": "rikai",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:backend": "bun run --filter backend dev",
    "dev:frontend": "bun run --filter frontend dev",
    "build": "bun run --filter '*' build",
    "build:backend": "bun run --filter backend build",
    "build:frontend": "bun run --filter frontend build",
    "start:backend": "bun run --filter backend start",
    "start:frontend": "bun run --filter frontend start",
    "clean:script": "node -e \"const fs=require('fs');['node_modules','backend/node_modules','frontend/node_modules','backend/dist','frontend/dist'].forEach(p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){}})\"",
    "lint": "oxlint -c ./.oxlintrc.json --import-plugin --node-plugin --promise-plugin --tsconfig ./backend/tsconfig.json ./backend/src && oxlint -c ./.oxlintrc.json --import-plugin --react-plugin --jsx-a11y-plugin --tsconfig ./frontend/tsconfig.json ./frontend/src",
    "lint:fix": "oxlint -c ./.oxlintrc.json --import-plugin --node-plugin --promise-plugin --tsconfig ./backend/tsconfig.json --fix ./backend/src && oxlint -c ./.oxlintrc.json --import-plugin --react-plugin --jsx-a11y-plugin --tsconfig ./frontend/tsconfig.json --fix ./frontend/src",
    "format": "oxfmt -c ./.oxfmtrc.json --write ./backend/src ./frontend/src",
    "format:check": "oxfmt -c ./.oxfmtrc.json --check ./backend/src ./frontend/src",
    "check": "oxlint -c ./.oxlintrc.json --import-plugin --node-plugin --promise-plugin --tsconfig ./backend/tsconfig.json ./backend/src && oxlint -c ./.oxlintrc.json --import-plugin --react-plugin --jsx-a11y-plugin --tsconfig ./frontend/tsconfig.json ./frontend/src && oxfmt -c ./.oxfmtrc.json --check ./backend/src ./frontend/src"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "typescript": "^5.8.3"
  }
}
